{
    "manifest_version": 3,
    "name": "Scheduler Extension",
    "version": "1.0.0",
    "description": "To allow easy sport schedule generation",
    "permissions": [
        "tabs"
    ],
    "icons": {
    },
    "author": "Scott Forslund",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Scheduler Extension",
        "default_icon": {
          "16": "soccer-ball.png"
        }
    }
  }